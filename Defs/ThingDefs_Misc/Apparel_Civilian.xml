    <!-- Base Civilian -->

    <ThingDef ParentName="ApparelMakeableBase" Name="MFS_CvilianBase" Abstract="true">
        <recipeMaker>
            <researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
            <techLevel>Medieval</techLevel>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <recipeUsers>
                <li>DankPyon_TailorsBench</li>
                <!-- add vanilla workbenches in case -->
            </recipeUsers>
        </recipeMaker>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <apparel>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
            <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
            <developmentalStageFilter>Child, Adult</developmentalStageFilter>            
        </apparel>
        <tradeability>Sellable</tradeability>        
    </ThingDef>

    <!-- Desert Outfit -->

    <ThingDef ParentName="MFS_CivilianBase">
        <defName>MFS_DesertOutfit</defName>
        <label>desert outfit</label>
        <description>A vest, a thick cloth belt and some trousers make up a common outfit not just for the city states but for all inhabitants of the desert. It is ideal for long journeys across the wind battered dunes.</description>
        <graphicData>
            <texPath>Apparel/Armor/Civilian/Desert_Outfit/Desert_Outfit</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <recipeMaker>
            <skillRequirements>
                <Crafting>3</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costStuffCount>40</costStuffCount>
        <statBases>
            <MaxHitPoints>125</MaxHitPoints>
            <WorkToMake>4500</WorkToMake>
            <Mass>0.8</Mass>
            <StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.45</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Armor/Civilian/Desert_Outfit/Desert_Outfit</wornGraphicPath>
            <tags>
                <!-- <li>MedievalBasic</li> -->
                <li>MFS_CivilianBasic</li>
            </tags>
            <layers>
                <li>Middle</li>
            </layers>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel"/>
    </ThingDef>

    <!-- Light Robe -->

    <ThingDef ParentName="MFS_CivilianBase">
        <defName>MFS_LightRobe</defName>
        <label>light robe</label>
        <description>A simple outfit formed by layering folds of fabric and draping them down the shoulders. The many air pockets created this way provide natural insulation both against the blistering heat of the day and the chilling winds of the night.</description>
        <graphicData>
            <texPath>Apparel/Armor/Civilian/Light_Robe/Light_Robe</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <recipeMaker>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costStuffCount>50</costStuffCount>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>4500</WorkToMake>
            <Mass>0.8</Mass>
            <StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.35</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Armor/Civilian/Light_Robe/Light_Robe</wornGraphicPath>
            <tags>
                <!-- <li>MedievalBasic</li> -->
                <li>MFS_CivilianBasic</li>
            </tags>
            <layers>
                <li>Middle</li>
                <li>OnSkin</li>
            </layers>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel"/>
    </ThingDef>

    <!-- Ornate Robe -->

